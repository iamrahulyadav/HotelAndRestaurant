<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_pickup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick-up Details"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/et_dialog_detail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/tv_pickup_text"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:hint="Add your pick-up location detail for the Captine."/>

    <ImageView
        android:id="@+id/iv_dialog_crose_text"
        android:layout_toRightOf="@+id/et_dialog_detail_text"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/cross"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_dialog_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_dialog_detail_text" />

    <TextView
        android:id="@+id/tv_dialog_cancel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_toLeftOf="@+id/tv_dialog_save"
        android:layout_marginRight="40dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_dialog_detail_text"
        android:layout_marginBottom="20dp"/>



</RelativeLayout>