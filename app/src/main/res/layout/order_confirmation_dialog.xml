<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_transperent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dialog_tv_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Order Confirmed"
                android:gravity="center"/>
            <TextView
                android:id="@+id/dialog_tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you, Your Order Has been submitted successfully our agent will delivery your order soon."
                android:textColor="@color/black"
                android:padding="10dp"
                android:gravity="center"/>

            <RelativeLayout
                android:id="@+id/dialog_rl_ok"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPink"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:text="OK"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>