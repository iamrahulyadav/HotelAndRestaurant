<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_single_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_transperent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_item_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:src="@drawable/anda_paratha"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:text="Name"/>
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Paratha Anda"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:text="Unit Price"/>
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_item_unit_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Paratha Anda"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:text="Quantities"/>
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_item_quantities"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Paratha Anda"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:text="Total Price"/>
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_item_total_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Paratha Anda"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:text="Detail"/>
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_item_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Paratha Anda"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>




    </RelativeLayout>

</android.support.constraint.ConstraintLayout>